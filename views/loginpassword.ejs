<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Sign In — Step 2</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/font/bootstrap-icons.css" />
  <script src="/javascripts/auth.js"></script>
  <script>
    async function checkPassword(event) {
      event.preventDefault();
      const pw = document.getElementById('password').value;
      const salt = document.getElementById('salt').value;
      if (!pw) { document.getElementById('message').textContent = 'Please enter your password.'; return; }
      const hash = await sha256Hex(pw + ':' + salt);
      document.getElementById('hash').value = hash;
      document.getElementById('password').value = '';
      event.target.submit();
    }
  </script>
</head>
<body class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3 class="mb-3">Sign In — Step 2</h3>
      <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-warning"><%= message %></div>
      <% } %>
      <form method="post" action="/loginuser/verify" onsubmit="checkPassword(event)">
        <input type="hidden" name="username" value="<%= username %>">
        <input type="hidden" id="salt" value="<%= salt %>">
        <input type="hidden" id="hash" name="hash">
        <div class="mb-3">
          <label class="form-label">Password for <strong><%= username %></strong></label>
          <input type="password" id="password" class="form-control" autofocus required>
        </div>
        <div id="message" class="text-danger mb-3"></div>
        <button class="btn btn-primary" type="submit">Login</button>
        <a class="btn btn-link" href="/loginuser">Back</a>
      </form>
    </div>
  </div>
</body>
</html>
